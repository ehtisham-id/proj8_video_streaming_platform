{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@tests/*": [
        "tests/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@common/*": [
        "src/common/*"
      ]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "types": [
      "node",
      "jest"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "videos/processed",
    "**/videos/processed/**",
    "videos/**/processed/**"
  ]
}